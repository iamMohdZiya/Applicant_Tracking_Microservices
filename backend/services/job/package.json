  "keywords": [
    "microservice",
    "node",
    "express",
    "mongodb",
    "ats"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.4.4",
    "kafkajs": "^2.2.4",
    "jsonwebtoken": "^9.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4"
  }
}
