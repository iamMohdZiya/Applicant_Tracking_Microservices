{
  "name": "ats-job-posting-service",
  "version": "1.0.0",
  "description": "Microservice for managing job postings in the Applicant Tracking System.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prestart:prod": "npm install --production",
    "start:prod": "NODE_ENV=production node server.js",
